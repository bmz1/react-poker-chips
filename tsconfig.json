{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "allowJs": true,
    "target": "es2016",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
          "node_modules/*",
          "src/types/*"
      ]
  }
},
  "include": [
    "./src/**/*",
    "./app.ts",
    "./redis.ts",
    "./web/**/*",
    "./socket.ts",
    "./utils/**/*",
    "./config/**/*"
  ],
  "exclude": ["node_modules/**"],
  "compileOnSave": true
}
